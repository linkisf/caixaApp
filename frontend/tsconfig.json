{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,

    /* ðŸ‘‡ alias exigido pelo shadcn/ui e Ãºtil para o editor */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ðŸ‘‡ tipos do Vite para evitar erros de import.meta/env, etc. */
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
